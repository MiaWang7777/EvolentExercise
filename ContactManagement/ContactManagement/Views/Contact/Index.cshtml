@model ContactManagement.Models.ContactsListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact Management";
}
<script type="text/javascript">
    $(document).ready(function () {
    });
</script>

<br />
<div class="row">
    <h3>Manage your contacts</h3>
</div>

<div class="row">
    <a id="btn-create" href="@Url.Action("CreateUpdate", "Contact")" class="btn btn-default">Create new contact</a>
</div>
<br />
<div class="row">
    <div class="table-responsive">
        <table id="tbl-contacts" class="table table-striped table-hover table-condensed" cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @if(Model.Contacts!=null && Model.Contacts.Count()>0)
            {
                foreach (var contact in Model.Contacts)
                {
                     <tr>
                         <td></td>
                         <td>@contact.FirstName</td>
                         <td>@contact.LastName</td>
                         <td>@contact.Email</td>
                         <td>@contact.Phone</td>
                         <td>
                             <a href="@Url.Action("CreateUpdate", "Contact", new { id = contact.Id})"><span title="Edit" class="glyphicon glyphicon-edit"></span></a>
                             <a href="@Url.Action("Delete", "Contact", new { id = contact.Id})"><span title="Delete" class="glyphicon glyphicon-remove"></span></a>
                         </td>
                     </tr>
                }
            }
        </table>
    </div>
</div>
